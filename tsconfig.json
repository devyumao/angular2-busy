{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": false,
        "outDir": "build"
    },
    "exclude": [
        "node_modules",
        "build",
        "demo",
        "test",
        "typings/main",
        "typings/main.d.ts",
        "typings/index.d.ts"
    ],
    "filesGlob": [
        "./index.ts",
        "./src/**/*.ts",
        "./demo/**/*.ts",
        "!./node_modules/**/*.ts",
        "typings/browser.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
