{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "build"
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "./index.ts",
        "./src/**/*.ts",
        "./demo/**/*.ts",
        "!./node_modules/**/*.ts",
        "typings/browser.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
